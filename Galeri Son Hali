                    </div>
                </div>
            `).join('');
        }

        function toggleFav(id, btn) {
            const arac = araclar.find(a => a.id === id);
            const index = favoriler.findIndex(f => f.id === id);

            if (index === -1) {
                favoriler.push(arac);
                btn.classList.add('active');
                showToast();
                document.getElementById('fav-panel').style.display = 'block'; // ƒ∞lk eklemede paneli g√∂ster
            } else {
                favoriler.splice(index, 1);
                btn.classList.remove('active');
            }
            updateFavUI();
        }

        function showToast() {
            const toast = document.getElementById('fav-toast');
            toast.style.display = 'block';
            setTimeout(() => toast.style.display = 'none', 2000);
        }

        function toggleFavPanel() {
            const panel = document.getElementById('fav-panel');
            panel.style.display = panel.style.display === 'block' ? 'none' : 'block';
        }

        function updateFavUI() {
            const list = document.getElementById('fav-list');
            const count = document.getElementById('fav-count');
            count.innerText = favoriler.length;

            if (favoriler.length === 0) {
                list.innerHTML = '<li class="text-muted">Hen√ºz favori yok.</li>';
            } else {
                list.innerHTML = favoriler.map(f => `
                    <li class="mb-2 border-bottom pb-1 d-flex justify-content-between">
                        <span>${f.ad}</span>
                        <strong class="small">${f.fiyat}</strong>
                    </li>
                `).join('');
            }
        }

        renderIlanlar();
    </script>
